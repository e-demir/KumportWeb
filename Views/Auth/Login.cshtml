
@model LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @if (!string.IsNullOrEmpty(Model.Msg))
    {
        var messages = Model.Msg.Split(".");
        foreach (var item in messages)
        {
            if (!string.IsNullOrEmpty(item))
            {
                <div class="alert alert-danger" role="alert">
                    @item
                </div>
            }
        }
    }
    <div class="col-12" style="display:  flex; align-items: stretch; justify-content: center;">

        <br />

        <form method="post" asp-page="/Login">
            <h5>Login</h5>

            <br />
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" asp-for="@Model.Email" required class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" asp-for="@Model.Password" required class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" style="width:inherit!important" class="btn btn-primary">Login <i class="fas fa-sign-in-alt"></i></button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-secondary" style="width:inherit!important" onclick="@("window.location.href='" + @Url.Action("register", "auth") + "'");">Register <i class="fas fa-user"></i></button>
                </div>
            </div>
        </form>

    </div>



</body>
</html>