
@model AddPostViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <div class="col-12" style="display:block; align-items: stretch; justify-content: center;">

        <br />
        
        <form method="post" enctype="multipart/form-data" asp-controller="posts" asp-action="AddPost">
            <h5 style="text-align: center;">Share with community</h5>
            <br />
            <div class="form-group row">               
                <div class="col-sm-12" style=" text-align: center; padding:8px">
                    <img src="~/img/pc.png" id="blah" style="height:20rem; max-width:100%" class="img-fluid" alt="Post Image">                    
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-3 col-form-label">Picture</label>
                <div class="col-sm-9">
                    <input class="form-control" id="im" asp-for="Image" type="file" />

                </div>
            </div>
            <div class="form-group row">
                <label for="title" class="col-sm-3 col-form-label">Title</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Title" required class="form-control" id="title" placeholder="Title">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input class="btn btn-success" style="width:inherit!important"  type="submit" value="Share" />
                </div>
            </div>

        </form>

    </div>
</body>
</html>


<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#im").change(function () {
        readURL(this);
    });
</script>