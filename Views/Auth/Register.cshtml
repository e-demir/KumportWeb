
@model RegisterViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        var messages = Model.Message.Split(".");
        foreach (var item in messages)
        {
            if (!string.IsNullOrEmpty(item))
            {
                <div class="alert alert-danger" role="alert">
                    @item
                </div>
            }
        }
    }
    <div class="col-12" style="display: flex; align-items: stretch; justify-content: center;">




        <br />

        <form method="post" asp-page="/Register">
            <h5>Register</h5>

            <br />
            <div class="form-group row">
                <label for="username" class="col-sm-3 col-form-label">Username</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="@Model.Username" required class="form-control" id="username" placeholder="Username">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" asp-for="@Model.Email" required class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" asp-for="@Model.Password" required class="form-control" id="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" style="width:inherit!important" class="btn btn-secondary">Register <i class="fas fa-user"></i></button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary" style="width:inherit!important" onclick="@("window.location.href='" + @Url.Action("login", "auth") + "'");">Login <i class="fas fa-sign-in-alt"></i></button>
                </div>
            </div>
        </form>

    </div>


</body>
</html>